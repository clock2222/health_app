<div class="d-flex flex-column">
  <div class="mt-3"><%= form.label :name %> (任意)</div>
  <%= form.text_field :name %>
</div>
<div class="d-flex flex-column">
  <div class="mt-3"><%= form.label :email %> (必須)</div>
  <%= form.email_field :email, required: true, pattern: "^[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]+$" %>
</div>
<div class="d-flex flex-column">
  <div class="mt-3"><%= form.label :content %> (必須)</div>
  <%= form.text_area :content, required: true %>
</div>
