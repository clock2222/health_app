<div class="nested-fields mt-3" id="detail-association-insertion-point1">
  <div class="row">
    <div class="col-1 my-auto">
      <%= link_to_remove_association f, class: "btn btn-secondary" do %>
        <i class="fas fa-trash-alt"></i> 
      <% end %>
    </div>
    <div class="offset-md-1 row">
      <div class="form-group col-md-6">
        <%= f.label :ing_name %>
        <%= f.text_field :ing_name, class: "form-control", placeholder: "例）コーヒー" %>
      </div>
      <div class="form-group col-md-3 offset-md-1">
        <%= f.label :quantity %>
        <%= f.text_field :quantity, class: "form-control", placeholder: "例）1日６杯以上" %>
      </div>
      <div class="form-group col-md-12">
        <%= f.label :explanation %>
        <%= f.text_field :explanation, class: "form-control", placeholder: "例）胃に負担をかけるのがポイント" %>
      </div>
    </div>
  </div>
  <hr>
</div>