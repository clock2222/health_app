<h1 class="text-center">詳細表示</h1>
<section class="card border-dark mt-5">
  <p id="post-<%= @post.id %>">
    <% if @post.liked_by?(current_user) %>
      <%= render "like", post: @post %>
    <% else %>
      <%= render "dislike", post: @post %>
    <% end %>
  </p>
  <P>
    <%=  "#{ @category_parent.name } > #{ @category_child.name } > #{ @category_grandchild.name }" %>
  </P>
  <p>
    <%= render_with_hashtags(@post.tag_name) %>
  </p>
  <div class="card-header">
    <h4><%= @post.title %></h4>
  </div>
  <p><%= image_tag @post.image.thumb.url %></p>
  <div class="card-body">
    <p class="card-text"><%= simple_format(h @post.content) %></p>
  </div>
  <div class="card-body">
    <% @ingredients.each do |ing| %>
      <p class="card-text">材料<%= simple_format(h ing.ing_name) %></p>
      <p class="card-text">分量<%= simple_format(h ing.quantity) %></p>
    <% end %>
  </div>
  <div class="card-body">
    <% @how_to_makes.each do |make| %>
      <p class="card-text">作り方<%= simple_format(h make.explanation) %></p>
    <% end %>
  </div>
  <div class="card-body">
    <p class="card-text">作成日時<%= simple_format(l @post.created_at) %></p>
  </div>
  <div class="card-body">
    <p class="card-text">ユーザーID<%= simple_format(@post.user.email) %></p>
  </div>
  <% if current_user.id == @post.user_id %>
    <p>
      <%= link_to "編集", edit_post_path(@post) %>
      <%= link_to "削除", post_path(@post), method: :delete, data: { confirm: "削除しますか？" } %>
    </p>
  <% end %>
</div>
</section>
<div class="base-container">
  <canvas id="radar-chart" width="100%" height="100%"></canvas>
</div>